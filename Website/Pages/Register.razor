@page "/register/{SnowflakeStr}"
@using Microsoft.EntityFrameworkCore
@using Website.Data
@inject IDbContextFactory<WebsiteContext> ContextFactory
@inject NavigationManager NavManager
@inject DiscordService Discord
@inject IvaoApiService IvaoApi

<Authenticated>
    <ChildContent>
        @if (snowflake == 0)
        {
            <span>
                Hmm, something didn't work. Try again maybe?
            </span>
        }
        else
        {
            _ = RegisterAsync(context);
            <span>
                Hello, @context.FirstName! Thanks for registering with our Discord! Standby to be redirected to our homepage.
            </span>
            NavManager.NavigateTo("/", true);
        }
    </ChildContent>
    <Loading>
        Registering&hellip;
        (If this page doesn't change in 30 seconds, please refresh)
    </Loading>
</Authenticated>

@code {
    [Parameter]
    public string SnowflakeStr { get; set; } = "";

    private ulong snowflake;

    protected override void OnParametersSet()
    {
        if (ulong.TryParse(SnowflakeStr, out ulong snowflake))
            this.snowflake = snowflake;

        base.OnParametersSet();
    }

    private async Task RegisterAsync(User user)
    {
        if (snowflake == 0)
            return;

        _ = Discord.SendMessageAsync(user, $"Thanks for registering, your roles are being assigned and your account is being set-up. This can take up to fifteen minutes, we'll ping you when it's done.", 60000);
        var context = await ContextFactory.CreateDbContextAsync();
        user = context.Users.Find(user.Vid)!;
        user.Snowflake = snowflake;
        await context.SaveChangesAsync();
        StateHasChanged();
        _ = Task.Run(async () =>
        {
            await Discord.EnforceRolesAsync(user, IvaoApi);
            await Discord.SendMessageAsync(user, $"Thanks for waiting, {user.FirstName}! You should now have your roles.", 60000);
        });
    }
}